<%# builds a nested route e.g. /articles/1/comments since we call form_for
with args %>
<%= form_for([@article, @article.comments.build]) do |f| %>
<p>
	<%= f.label :commenter %>
	<%= f.text_field :commenter %>
</p>

<p>
	<%= f.label :body %>
	<%= f.text_area :body %>
</p>
<p>
	<%= f.submit %>
</p>
<% end %>
